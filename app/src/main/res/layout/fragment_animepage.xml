<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".AnimePageFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="vertical"
            tools:context="com.example.animesuggest.AnimePageFragment">

            <TextView
                android:id="@+id/displayromanji"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/displaypic"
                android:layout_width="230dp"
                android:layout_height="350dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:maxWidth="230dp"
                android:maxHeight="350dp"
                android:minWidth="230dp"
                android:minHeight="350dp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="350dp"
                android:layout_marginTop="-350dp"
                android:layout_marginEnd="100dp"

                android:text="@string/genre"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/scoredisplay"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="302dp"
                android:layout_marginEnd="127dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="277dp"
                android:layout_marginEnd="38dp"
                android:text="@string/rank"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/rankdisplay"
                android:layout_width="87dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="301dp"
                android:layout_marginEnd="-12dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="185dp"
                android:layout_marginEnd="12dp"
                android:text="@string/end_date"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="185dp"
                android:layout_marginEnd="126dp"
                android:text="@string/air_date"
                android:textSize="12dp" />


            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="214dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="153dp"
                android:paddingLeft="10dp"
                android:text="@string/japanese"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/displaynative"
                android:layout_width="145dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="71dp"
                android:paddingLeft="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="178dp"
                android:layout_marginBottom="158dp"
                android:paddingLeft="10dp"
                android:text="@string/description"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/displaydescription"
                android:layout_width="219dp"
                android:layout_height="152dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="0dp" />

            <Button
                android:id="@+id/button_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="439dp"
                android:layout_marginEnd="27dp"
                android:text="Button" />

            <TextView
                android:id="@+id/genredisplay"
                android:layout_width="189dp"
                android:layout_height="62dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="-12dp" />

            <TextView
                android:id="@+id/airdatedisplay"
                android:layout_width="87dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="205dp"
                android:layout_marginEnd="91dp" />

            <TextView
                android:id="@+id/enddatedisplay"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="203dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="279dp"
                android:layout_marginEnd="141dp"
                android:text="@string/score"
                android:textSize="12dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>